# Application Configuration
#-----------------------
# APP_ENV: Set to 'development' for detailed errors, 'production' for minimal errors
APP_ENV=development

# APP_DEBUG: Enable detailed error messages and debugging (true/false)
APP_DEBUG=true

# APP_TIMEZONE: Default timezone for date/time operations (e.g., UTC, America/New_York)
APP_TIMEZONE=UTC

# API Configuration
#-----------------
# Your Visual Crossing Weather API key
# Get one at: https://www.visualcrossing.com/weather-api
VISUAL_CROSSING_API_KEY=your_api_key_here

# Cache Configuration
#------------------
# CACHE_ENABLED: Enable/disable response caching (true/false)
CACHE_ENABLED=true

# CACHE_TTL: How long to cache weather data in seconds
# Default: 12 hours (43200 seconds)
CACHE_TTL=43200

# Redis Configuration
#------------------
# Redis connection settings
REDIS_HOST=redis
REDIS_PORT=6379

# Optional Redis authentication (leave empty if not needed)
REDIS_PASSWORD=

# Redis connection timeout in seconds (0 = no timeout)
REDIS_TIMEOUT=0

# Redis database number (0-15)
REDIS_DATABASE=0